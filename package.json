{
  "name": "web-cell-cli",
  "version": "0.5.0",
  "description": "Developer command-line tool for WebCell",
  "keywords": [
    "developer",
    "command-line",
    "web-cell",
    "component",
    "package",
    "bundle"
  ],
  "author": "shiy2008@gmail.com",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/DevCLI.git"
  },
  "bugs": {
    "url": "https://github.com/EasyWebApp/DevCLI/issues"
  },
  "homepage": "https://easywebapp.github.io/DevCLI/",
  "main": "source/Component.js",
  "bin": {
    "web-cell": "dist/web-cell.js"
  },
  "directories": {
    "lib": "source",
    "doc": "docs",
    "test": "test"
  },
  "engines": {
    "node": "^6.5.0"
  },
  "scripts": {
    "check": "mocha -r @babel/register -r @babel/polyfill -c --inline-diffs",
    "test": "npm run check -- --exit",
    "debug": "npm run check -- --inspect-brk",
    "lint": "eslint ./source/ ./test/ --fix",
    "pack": "amd-bundle source/install dist/install",
    "bundle": "amd-bundle source/index dist/web-cell",
    "prepublishOnly": "npm test  &&  npm run lint  &&  npm run bundle  &&  npm run pack",
    "build": "npm run prepublishOnly  &&  esdoc",
    "precommit": "npm run build  &&  git add .",
    "start": "web-server docs/ -o",
    "install": "node dist/install"
  },
  "dependencies": {
    "@tech_query/node-toolkit": "^0.6.0",
    "amd-bundle": "^1.6.0",
    "commander": "^2.18.0",
    "fs-extra": "^6.0.1",
    "jsdom": "^11.12.0",
    "less": "^3.8.1",
    "puppeteer-browser": "^0.3.3",
    "sass": "^1.13.4",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "esdoc": "^1.1.0",
    "esdoc-external-webapi-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.19.1",
    "husky": "^0.14.3",
    "koapache": "^1.0.2",
    "mocha": "^5.2.0",
    "should": "^13.2.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
