{
    "keywords": [
        "web-cell",
        "web",
        "component",
        "SPA"
    ],
    "directories": {
        "lib": "source/",
        "test": "."
    },
    "scripts": {
        "dev": "web-cell preview",
        "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json}\"",
        "lint": "eslint source/ test/ --fix",
        "build": "npm run format  &&  npm run lint  &&  web-cell pack",
        "test": "npm run build",
        "start": "web-server --CORS"
    },
    "dependencies": {
        "@babel/polyfill": "^7.2.5",
        "@webcomponents/webcomponentsjs": "^2.2.6",
        "web-cell": "^0.10.12",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.3.0",
        "acorn": "6.0.6",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.13.0",
        "husky": "^1.3.1",
        "koapache": "^1.0.4",
        "prettier": "^1.16.3",
        "web-cell-cli": "^0.8.0"
    },
    "babel": {
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "decoratorsBeforeExport": true
                }
            ]
        ]
    }
}
